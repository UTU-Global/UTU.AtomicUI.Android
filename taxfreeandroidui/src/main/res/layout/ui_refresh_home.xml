<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00b398"
    android:orientation="vertical">

    <com.agrawalsuneet.dotsloader.loaders.TashieLoader
        android:id="@+id/dotsLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:tashieloader_animDelay="40"
        app:tashieloader_animDur="200"
        app:tashieloader_dotsColor="#FFFFFF"
        app:tashieloader_dotsDist="3dp"
        app:tashieloader_dotsRadius="8dp"
        app:tashieloader_interpolator="@android:anim/accelerate_interpolator"
        app:tashieloader_noOfDots="3" />
</LinearLayout>