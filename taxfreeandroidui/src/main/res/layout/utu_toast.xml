<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snackbarBgColor">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/toastText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/closeToastLayout"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/notosans_regular"
        android:gravity="start|center"
        android:maxLines="4"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorDesc"
        android:textSize="12sp" />

    <FrameLayout
        android:id="@+id/closeToastLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/closeToast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/close_toast" />

    </FrameLayout>

</RelativeLayout>
