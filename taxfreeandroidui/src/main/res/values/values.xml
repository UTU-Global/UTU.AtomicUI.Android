<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="taxFreeStyle" format="reference" />
    <declare-styleable name="AtomicButton">
        <attr name="size" format="string" />
        <attr name="outlined" format="boolean" />
        <attr name="disabled" format="boolean" />
        <attr name="state" format="string" />
    </declare-styleable>

    <style name="Base.AtomicButton" parent="android:Widget.Button">
        <item name="size">regular</item>
        <item name="outlined">false</item>
        <item name="disabled">false</item>
    </style>

    <style name="AtomicButton" parent="Base.AtomicButton" />

    <declare-styleable name="AtomicBubble">
        <attr name="value" format="string" />
    </declare-styleable>

    <style name="Base.AtomicBubble" parent="Widget.AppCompat.TextView">
        <item name="value">empty</item>
    </style>

    <style name="AtomicBubble" parent="Base.AtomicBubble" />

</resources>