<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <global.ututaxfree.taxfreeandroidui.AtomicHeaderView
        android:id="@+id/headerWalletLayout"
        android:layout_width="match_parent"
        android:background="@color/colorRed"
        app:actionType="back"
        app:menuIcon="@drawable/ic_close"
        android:layout_height="?attr/actionBarSize"
        app:headerLabel="dhhdhdhdddddddddddhahyfgdghvdfgdvfgdvgdvfgdvfdgvfdgvfdgfvdgfvd" />

    <global.ututaxfree.taxfreeandroidui.picker.LoopView
        android:id="@+id/loop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:centertextColor="@color/greenColor"
        app:dividerTextColor="@color/colorRed"
        app:isLoop="false"
        app:outertextColor="@color/colorRed"
        app:textsize="24sp" />


</LinearLayout>