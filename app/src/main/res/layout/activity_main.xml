<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <global.ututaxfree.taxfreeandroidui.AtomicHeaderView
        android:id="@+id/headerWalletLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:headerLabel="atomic_ui_test"
        app:menuIcon="@drawable/ic_close"
        app:toolbarBackgroundColor="@color/greenColor" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/atomic_ui_test" />


</LinearLayout>