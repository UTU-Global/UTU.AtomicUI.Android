<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <global.ututaxfree.taxfreeandroidui.AtomicHeaderView
        android:id="@+id/headerWalletLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:headerLabel="Test" />

    <global.ututaxfree.taxfreeandroidui.picker.LoopView
        android:id="@+id/loop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:centertextColor="@color/greenColor"
        app:dividerTextColor="@color/colorRed"
        app:isLoop="false"
        app:outertextColor="@color/colorRed"
        app:textsize="24sp" />

    <global.ututaxfree.taxfreeandroidui.AtomicButton
        android:id="@+id/addOrLinked"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:text="Add"
        android:textSize="14sp"
        app:outlined="true"
        app:size="small" />

</LinearLayout>